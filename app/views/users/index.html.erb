<h1>Users</h1>

<table class="table">
  <thead>
      <th>image</th>
      <th>name</th>
      <th></th>
  </thead>
  <tbody>
    <% @user.each do |user| %>
    <tr>
      <td><%= image_tag user.get_profile_image(50,50), fallback: "no_image.jpg" %></td>
      <td><%= user.name %></td>
      <td><%= link_to "Show", "/users/#{user.id}" %></td>
    </tr>
    <% end %>
  </tbody>
</table>
