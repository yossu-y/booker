<h2>User info</h2>

<table class="table">
  <tr>
    <td><%= image_tag user.get_profile_image(50,50), fallback: "no_image.jpg" %></td>
  </tr>
  <tr>
    <td>name</td>
    <td><%= user.name %></td>
  </tr>
  <tr>
    <td>introduction</td>
    <td><%= user.introduction %></td>
  </tr>
  <tr>
    <%= link_to edit_user_path(user), class:"btn btn-outline-secondary btn-block" do %>
    <i class="fas fa-user-cog "></i>
    <% end %>
  </tr>
</table>