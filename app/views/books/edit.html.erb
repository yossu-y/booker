<h1>Editing Book</h1>

<% form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
  <p>Title</p>
  <%= f.text_field :title %>
  <p>Opinion</p>
  <%= f.text_area :body %>
  <%= f.submit "Update Book", class: "btn btn-success" %>
  <%= link_to "Show", book_path(@book.id) %>
  |
  <%= link_to "Back", books_path >
<% end %>
